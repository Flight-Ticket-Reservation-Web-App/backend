<!-- src/mail/templates/ticket.hbs -->
<html>
  <head>
    <title>QAirline Flight Ticket</title>
    <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link href='https://fonts.googleapis.com/css2?family=Satoshi:wght@400;500;700&display=swap' rel='stylesheet' />
  </head>
  <body style="margin: 0; padding: 0; font-family: 'Satoshi', Arial, sans-serif; background-color: #f9f5fc;">
    <div style="max-width: 600px; margin: 20px auto; background-color: #ffffff; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
      <!-- Header -->
      <div style="background-color: #8F2257; padding: 32px; color: #ffffff; text-align: center;">
        <h1 style="font-size: 28px; font-weight: 700; margin: 0;">QAirline Flight Ticket</h1>
        <p style="font-size: 18px; margin: 10px 0 0;">Your journey awaits</p>
      </div>

      <!-- Ticket Content -->
      <div style="padding: 32px;">
        <div style="border: 2px solid #8F2257; border-radius: 8px; padding: 24px;">
          <h2 style="color: #8F2257; margin-top: 0;">Ticket Details</h2>
          
          <!-- Passenger Info -->
          <div style="margin: 16px 0; padding-bottom: 16px; border-bottom: 1px solid #f4e8f7;">
            <h3 style="color: #8F2257; margin-top: 0; font-size: 18px;">Passenger Information</h3>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Ticket Number:</strong> {{ticketNumber}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Passenger Name:</strong> {{passengerName}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Seat:</strong> {{seatNumber}}
            </p>
          </div>

          <!-- Flight Info -->
          <div style="margin: 16px 0; padding-bottom: 16px; border-bottom: 1px solid #f4e8f7;">
            <h3 style="color: #8F2257; margin-top: 0; font-size: 18px;">Flight Information</h3>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Airline:</strong> {{airline}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Flight ID:</strong> {{flightId}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Flight Number:</strong> {{flightNo}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Date:</strong> {{flightDate}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Route:</strong> {{origin}} → {{destination}}
            </p>
            <p style="margin: 8px 0; font-size: 16px;">
              <strong style="color: #8F2257;">Gate:</strong> {{gate}}
            </p>
          </div>

          <!-- Barcode -->
          <div style="text-align: center; margin-top: 24px; padding: 16px; background-color: #f4e8f7; border-radius: 8px;">
            <p style="margin: 0; font-family: monospace; font-size: 16px;">{{barcode}}</p>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div style="background-color: #f9f5fc; padding: 24px; text-align: center; font-size: 14px; color: #555555;">
        <p style="margin: 0;">
          Need help? Contact our <a href="https://qairline.com/support" style="color: #8F2257; text-decoration: none; font-weight: 500;">Support Center</a>
        </p>
        <p style="margin: 10px 0 0;">© 2024 QAirline. All rights reserved.</p>
      </div>
    </div>
  </body>
</html>